@model IEnumerable<okul_yonetim.Models.Mezunlar>

@{
    ViewBag.Title = "Index";
}

<h2>Mezunlar Listesi</h2>

<p>
    @Html.ActionLink("Mezun Ekle", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.MezunAd)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MezunSoyad)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MezunBolum)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.MezunAd)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MezunSoyad)
        </td>
        <td>
            @if (item.MezunBolum == 1)
            {
                <text>Bilgisayar Programcılığı</text>
            }
            else if (item.MezunBolum == 2)
            {
                <text>İnşaat</text>
            }
            else
            {
                @Html.DisplayFor(modelItem => item.MezunBolum)
            }


        </td>
        <td>
            @Html.ActionLink("Düzenle", "Edit", new { id=item.MezunId }, new { @class = "btn btn-success" }) |
            @Html.ActionLink("Detaylar", "Details", new { id=item.MezunId }, new { @class = "btn btn-info" }) |
            @Html.ActionLink("Sil", "Delete", new { id=item.MezunId }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
