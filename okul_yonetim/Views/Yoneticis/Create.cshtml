@model okul_yonetim.Models.Yonetici

@{
    ViewBag.Title = "Create";
}

<h2>Yönetici Ekle</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <label for="YoneticiAd">Yönetici Ad</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.YoneticiAd, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.YoneticiAd, "", new { @class = "text-danger" })
        </div>
    </div>

        <div class="form-group">
            <label for="YoneticiSoyad">Yönetici Şifre</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.YoneticiSoyad, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.YoneticiSoyad, "", new { @class = "text-danger" })
            </div>
        </div>



        <div class="form-group mt-2">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Ekle" class="btn btn-success" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Listeye Geri Dön", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
